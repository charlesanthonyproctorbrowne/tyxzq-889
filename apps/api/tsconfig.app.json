{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/apps/api",
    "module": "CommonJS",
    "types": ["node", "express"],
    "rootDir": "src",
    "esModuleInterop": true,
    "baseUrl": ".",
  },
  "include": ["src/*.ts", "src/**/*.ts"],
  "exclude": [
    "out-tsc",
    "dist",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs"
  ]
}
